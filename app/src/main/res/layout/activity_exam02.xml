<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam02_baseLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/exam02_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/jeju2" />

    <EditText
        android:id="@+id/exam02_edtAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/exam02_textView1"
        android:text="0" >
    </EditText>
    <TextView
        android:id="@+id/exam02_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exam02_edtAngle"
        android:layout_alignParentLeft="true"
        android:text="각도 입력"
        android:textSize="20dp" />
</RelativeLayout>
